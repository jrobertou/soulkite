extends layout

block content
  // Checkout
  section.checkout
    .container
      // Expandable Panels
      .row
        .col-lg-12
          h2 Checkout
          // Hidden Panels
          a.panel-toggle(href='#login')
            i
            | Returning customer? Click here to login
          .row
            #login.hidden-panel
              .col-lg-12
                .row
                  .col-lg-7.col-md-7.col-sm-7
                    form.login-form(method='post')
                      .form-group.group
                        label(for='log-email2') Email
                        input#log-email2.form-control(type='email', name='log-email2', placeholder='Enter your email', required='')
                        a.help-link(href='#') Forgot email?
                      .form-group.group
                        label(for='log-password2') Password
                        input#log-password2.form-control(type='text', name='log-password2', placeholder='Enter your password', required='')
                        a.help-link(href='#') Forgot password?
                      .checkbox
                        label
                          input(type='checkbox', name='remember')
                          |  Remember me
                      input.btn.btn-primary(type='submit', value='Login')
                  .col-lg-5.col-md-5.col-sm-5
                    label Use social accounts
                    .social-login
                      a.facebook(href='#')
                        i.fa.fa-facebook-square
                      a.google(href='#')
                        i.fa.fa-google-plus-square
                      a.twitter(href='#')
                        i.fa.fa-twitter-square
          a.panel-toggle(href='#coupon')
            i
            | Have a coupon? Click here to enter your code
          .row
            .col-lg-5
              #coupon.hidden-panel
                form(name='coupon-code', method='post')
                  .form-group
                    label.sr-only(for='coupon-code') Enter coupon code
                    input#coupon-code.form-control(type='text', name='coupon-code', placeholder='Enter coupon code')
                  input.btn.btn-primary.btn-sm.btn-block(type='submit', name='apply-coupon', value='Apply coupon')
      // Checkout Form
      .row
        form#checkout-form(method='post')
          // Left Column
          .col-lg-8.col-md-8.col-sm-8
            h3 Billing adress
            .form-group
              label(for='co-country') Country *
              .select-style
                select#co-country(name='co-country')
                  option Australia
                  option Belgium
                  option Germany
                  option United Kingdom
                  option Switzerland
                  option USA
            .row
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co-first-name') First Name *
                input#co-first-name.form-control(type='text', name='co-first-name', placeholder='First name', required='')
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co-last-name') Last Name *
                input#co-last-name.form-control(type='text', name='co-last-name', placeholder='Last name', required='')
            .form-group
              label(for='co-company-name') Company name
              input#co-company-name.form-control(type='text', name='co-company-name', placeholder='Company name')
            .form-group
              label(for='co-str-adress') Adress *
              input#co-str-adress.form-control(type='text', name='co-str-adress', placeholder='Street adress', required='')
            .form-group
              label.sr-only(for='co-appartment') Appartment
              input#co-appartment.form-control(type='text', name='co-appartment', placeholder='Appartment', required='')
            .form-group
              label(for='co-city') Town/ city *
              input#co-city.form-control(type='text', name='co-city', placeholder='Town/ city', required='')
            .row
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co-state') County/ state
                input#co-state.form-control(type='text', name='co-state', placeholder='County/ state')
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co_postcode') Postcode *
                input#co_postcode.form-control(type='text', name='co_postcode', placeholder='Postcode/ ZIP', required='')
            .row
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co-email') Email *
                input#co-email.form-control(type='email', name='co-email', placeholder='Email adress', required='')
              .form-group.col-lg-6.col-md-6.col-sm-6
                label(for='co_phone') Phone *
                input#co_phone.form-control(type='text', name='co_phone', placeholder='Phone number', required='')
            .checkbox.form-group
              label
                input(type='checkbox', name='create-account')
                |  Create an account?
            .checkbox.form-group
              label
                span Ship to a different adress?
                input(type='checkbox', name='ship-to-dif-adress')
            h3 Order notes
            .form-group
              label.sr-only(for='order-notes') Order notes
              textarea#order-notes.form-control(name='order-notes', rows='4', placeholder='Order notes')
          // Right Column
          .col-lg-3.col-lg-offset-1.col-md-4.col-sm-4
            h3 Your order
            table
              tr
                th Product
              tr
                td.name.border
                  | Bag
                  span x1
                td.price.border 2715,00 $
              tr
                td.th Cart subtotal
                td.price 2715,00 $
              tr
                td.th.border Shipping
                td.align-r.border Free shipping
              tr
                td.th Order total
                td.price 2715,00 $
            .payment-method
              .radio.light
                label
                  input#payment01(type='radio', name='payment', checked='')
                  |  Direct Bank Transfer
              p
                | Make your payment directly into our bank account. Please use your Order ID as the payment reference. Your order will not be shipped until the funds have cleared in our account.
              .radio.light
                label
                  input#payment02(type='radio', name='payment')
                  |  Cheque Payment
              .radio.light
                label
                  input#payment03(type='radio', name='payment')
                  |  PayPal
                  span.pp-label
            input.btn.btn-black.btn-block(type='submit', name='place-order', value='Place order')
  // Checkout Close
