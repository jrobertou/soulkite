extend layout
block content
  .row
    h2 #{title}
    hr
  .row
      table.table.table-hover
        thead
          th Name
          th Price
          th Quantity
          th Remove
        tbody
          each product in cart.products
            tr
              td  
                a(href='/product/#{product.slug}') #{product.name}
              td  #{product.price}
              td= product.quantity
              td 
                i.fa.fa-times
  .row
     .pull-right
        h4 Total: Â£#{cart.total}
  .row
    h2 Address de livraison
    hr
  .row 
    table.table
      thead
       tr
        th  Select
        th  Address 1
        th  Town
        th  Zip/Postal
      tr
       tbody
        td  
        td= customer.address.address1
        td= customer.address.town
        td= customer.address.pcd
  .row
    h2 Address de facturation
    hr
  .row 
    table.table
      thead
       tr
        th  Select
        th  Address 1
        th  Town
        th  Zip/Postal
      tr
       tbody
        td  
        td= customer.address.address1
        td= customer.address.town
        td= customer.address.pcd
  .row
    form(action="/order/resume", method="post").form-horizontal
        .control-group
            a(onclick="$('.row > form').submit();").btn.btn-primary.pull-right Pay
block scripts
        script(src="/js/controller/order/resume.js")