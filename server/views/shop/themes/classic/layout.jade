  body
    
    //- BEGIN TOP BAR
    .pre-header
      .container
        .row
          //- BEGIN TOP BAR MENU
          .col-md-12.col-sm-12.additional-nav
            ul.list-unstyled.list-inline.pull-right
              li
                a(href='/myaccount') My Account
                if customer && customer.name && customer.name.first
                  |  ( #{customer.name.first} )
              li
                a(href='/checkout') Checkout
              li
                if customer
                  a(href='/logout') #{__('Log Out')}
                else
                  a(href='/login') #{__('Log In')} 
          //- END TOP BAR MENU
    //- END TOP BAR

    //- BEGIN HEADER
    .navbar.header.no-margin(role='navigation')
      .container
        .navbar-header
          //-img(src='http://i.americanapparel.net/static/atg/1.18.0/img/logo.gif')
          //- BEGIN RESPONSIVE MENU TOGGLER
          button.navbar-toggle(data-target='.navbar-collapse', data-toggle='collapse', type='button')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //- END RESPONSIVE MENU TOGGLER
          a.navbar-brand(href='/')
            h1 #{shop.name}
          //- LOGO
        //- BEGIN CART
        include cartmenu
        
        //- BEGIN NAVIGATION
        include navigation
        
    //- END HEADER

    block content

    //- BEGIN FOOTER
    .footer.padding-top-15
      .container
        .row
          //- BEGIN NEWLETTER
          .col-md-12.col-sm-6
            .pre-footer-subscribe-box.pull-right
              h2 Newsletter
              form(action='#')
                .input-group
                  input.form-control(type='text', placeholder='youremail@mail.com')
                  span.input-group-btn
                    button.btn.btn-primary(type='submit') Subscribe
        br
        .row
          //- BEGIN COPYRIGHT
          .col-md-6.col-sm-6.padding-top-10
            | 2014 Â© moneboutique.fr ALL Rights Reserved.
          //- END COPYRIGHT
          //- BEGIN PAYMENTS
          .col-md-6.col-sm-6
            ul.list-unstyled.list-inline.pull-right.margin-bottom-15
              li
                img(src='/themes/classic/img/payments/MasterCard.jpg', alt='We accept MasterCard', title='We accept MasterCard')
              li
                img(src='/themes/classic/img/payments/PayPal.jpg', alt='We accept PayPal', title='We accept PayPal')
              li
                img(src='/themes/classic/img/payments/visa.jpg', alt='We accept Visa', title='We accept Visa')
