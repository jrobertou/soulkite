extends ./../layout

block content
	section.content
		div.row
			if (err)
				p Une erreur est survenu veuillez communiquer avec nous
				p #{err}
			else
				div.large-12.columns
					h1 Votre Magasin
					div.row
						div.large-3.columns.align-right
							p.bold Nom du magasin :
						div.large-9.columns
							p #{shop.name}
					div.row
						div.large-3.columns.align-right
							p.bold Compte de paiement paypal :
						div.large-9.columns
							p #{shop.paypal_email}
					div.row
						div.large-3.columns.align-right
							p.bold Sous-domaine :
						div.large-9.columns
							p #{shop.url}
				div.large-12.columns
					h1 Votre Compte :
					div.row
						div.large-3.columns.align-right
							p.bold Nom :
						div.large-9.columns
							p #{user.name.first} #{user.name.last}
					div.row
						div.large-3.columns.align-right
							p.bold Email :
						div.large-9.columns
							p #{user.email}